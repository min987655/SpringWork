<form id="frm" style="margin-bottom:5px">
	<input type="text" name="keyword" placeholer="키워드" />
</form>
	<button onclick="crawNaver()">크롤링시작</button>
<script>

	// jquery를 통해 데이터 변수화. 
	// form에 검색되는 값을 key = value 행태로 받아줌
	// keyword = form_el.serialize();
	function crawNaver(){
		let form_el = $("#frm");
		let data = form_el.serialize();
		console.log(data);

		fetch("/craw/naver/proc",{
			method : "post",
			body: data,
			headers:{
				'Content-Type':'application/x-www-form-urlencoded; charset=utf-8'
			}
		}, 120000).then(function(resp){
			return resp.text();
		}).then(function(resp){
			console.log(resp);
			alert(resp);
		});
	}
</script>
