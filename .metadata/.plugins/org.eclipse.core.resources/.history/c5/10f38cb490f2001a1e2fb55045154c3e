<mapper namespace="com.cos.baseball.repository.StadiumRepository">
	
	<insert id="save">
		INSERT INTO stadium(stadiumname)
		VALUES(#{stadiumname})
	</insert>

	<select id="findAll" resultType="com.cos.baseball.model.Stadium">
		SELECT id, stadiumname FROM stadium ORDER By id ASC
	</select>
	
</mapper>